{
  "name": "@is3a/web",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "react-router build",
    "deploy": "pnpm run build && wrangler deploy",
    "dev": "react-router dev",
    "preview": "pnpm run build && vite preview",
    "types:check": "pnpm run types:generate && react-router typegen && tsc -b",
    "types:generate": "wrangler types --env-interface CloudflareEnv",
    "db:fragno:generate": "fragno-cli db generate app/fragno/simple-auth-server.ts app/fragno/otp-server.ts app/fragno/stripe-server.ts app/fragno/forms-server.ts -o app/db/postgres/fragno-schema.ts",
    "db:postgres:push": "drizzle-kit push --config postgres.drizzle.config.ts",
    "db:postgres:generate": "drizzle-kit generate --config postgres.drizzle.config.ts",
    "db:postgres:migrate": "drizzle-kit migrate --config postgres.drizzle.config.ts",
    "stripe:webhook": "stripe listen --forward-to localhost:5173/api/stripe/webhook"
  },
